<%- include('./partials/header1.ejs') %>

<h1 style="text-align: center;font-size: 30px; font-weight: 700; margin-top: 100px; ;">CHECKOUT</h1>

<form method="post" action="place_order">
    <div class="row" style="margin-left:20px ; margin-right:20px; margin-bottom:20px; margin-top: 20px;" >
      <div class="col">
        <input type="text" class="form-control"  name="name" placeholder="Name">
      </div>
      <div class="col">
        <input type="text" class="form-control" name="email" placeholder="Email">
      </div>
    </div>

    <div class="row" style="margin-left:20px ; margin-right:20px; margin-bottom:20px;" >
        <div class="col">
          <input type="number" class="form-control" name="phone" placeholder="Phone">
        </div>
        <div class="col">
          <input type="text" class="form-control" name="hall" placeholder="Hall No. ">
        </div>
      </div>

      <div class="form-group" style="margin-left:350px ; margin-right:350px; margin-bottom:20px;" >
        <input type="text" class="form-control" id="formGroupExampleInput" name="room" placeholder="Room no. ">
      </div>
      
      <div style="margin: 20px 100px;display: flex;justify-content: space-between; align-items: center; ">
        <div style="display: flex">
          <h1 style="font-size: 35px; font-weight: 700; margin-right: 20px">
            Total:
          </h1>
          <h4 style="color: red; font-size: 35px; font-weight: 800">$<%= total %></h4>
        </div>
        <input type="submit" value="Place Order">
        <!-- <a href="/#" class="Place Order">Place Order</a> -->
      </div>

  </form>

  


